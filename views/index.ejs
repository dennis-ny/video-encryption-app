<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Video Encryption & Decryption</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      body {
        background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
      }

      .card {
        background: #1e293b;
        border: 1px solid #334155;
      }

      .file-input::-webkit-file-upload-button {
        display: none;
      }

      @keyframes spin {
        to {
          transform: rotate(360deg);
        }
      }
      .spinner {
        animation: spin 1s linear infinite;
      }
    </style>
  </head>
  <body class="min-h-screen py-12 px-4">
    <div class="max-w-7xl mx-auto mb-12">
      <h1 class="text-4xl font-bold text-white mb-2">Video Encryption Tool</h1>
      <p class="text-slate-400">
        Encrypt and decrypt your video files securely
      </p>
    </div>

    <div class="max-w-7xl mx-auto grid lg:grid-cols-2 gap-8">
      <!-- ENCRYPT CARD -->
      <div class="card rounded-lg p-8">
        <div class="flex items-center gap-3 mb-8">
          <div
            class="w-10 h-10 bg-emerald-500/10 rounded-lg flex items-center justify-center"
          >
            <svg
              class="w-5 h-5 text-emerald-500"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
              ></path>
            </svg>
          </div>
          <h2 class="text-2xl font-semibold text-white">Encrypt</h2>
        </div>

        <form id="encryptForm" class="space-y-6">
          <div>
            <label class="block text-sm font-medium text-slate-300 mb-2"
              >Video File</label
            >
            <input
              type="file"
              name="video"
              id="videoInput"
              accept="video/*"
              required
              class="file-input w-full px-4 py-3 bg-slate-800 border border-slate-700 rounded-lg text-slate-300 hover:border-slate-600 transition cursor-pointer focus:outline-none focus:ring-2 focus:ring-emerald-500"
            />
            <span
              id="videoFileName"
              class="block mt-2 text-sm text-slate-500"
            ></span>
          </div>

          <div>
            <label class="block text-sm font-medium text-slate-300 mb-2"
              >Method</label
            >
            <div class="flex gap-3">
              <label class="flex-1 cursor-pointer">
                <input
                  type="radio"
                  name="method"
                  value="aes"
                  checked
                  class="peer sr-only"
                />
                <div
                  class="bg-slate-800 border border-slate-700 rounded-lg p-3 text-center peer-checked:bg-emerald-500/10 peer-checked:border-emerald-500 transition"
                >
                  <span class="text-slate-300 font-medium">AES-256</span>
                </div>
              </label>
              <label class="flex-1 cursor-pointer">
                <input
                  type="radio"
                  name="method"
                  value="chacha20"
                  class="peer sr-only"
                />
                <div
                  class="bg-slate-800 border border-slate-700 rounded-lg p-3 text-center peer-checked:bg-emerald-500/10 peer-checked:border-emerald-500 transition"
                >
                  <span class="text-slate-300 font-medium">ChaCha20</span>
                </div>
              </label>
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-slate-300 mb-2"
              >Password</label
            >
            <input
              type="password"
              name="key"
              id="encryptKey"
              required
              class="w-full px-4 py-3 bg-slate-800 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:border-emerald-500 focus:outline-none focus:ring-2 focus:ring-emerald-500 transition"
              placeholder="Enter password"
            />
          </div>

          <button
            type="submit"
            id="encryptBtn"
            class="w-full bg-emerald-500 text-white font-medium py-3 rounded-lg hover:bg-emerald-600 transition disabled:opacity-50 disabled:cursor-not-allowed"
          >
            Encrypt
          </button>
        </form>

        <div
          id="encryptLoading"
          class="hidden mt-4 bg-slate-800 border border-slate-700 rounded-lg p-4 flex items-center gap-3"
        >
          <svg
            class="spinner w-5 h-5 text-emerald-500"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <circle
              class="opacity-25"
              cx="12"
              cy="12"
              r="10"
              stroke="currentColor"
              stroke-width="4"
            ></circle>
            <path
              class="opacity-75"
              fill="currentColor"
              d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
            ></path>
          </svg>
          <span class="text-slate-300 text-sm">Encrypting...</span>
        </div>
      </div>

      <!-- DECRYPT CARD -->
      <div class="card rounded-lg p-8">
        <div class="flex items-center gap-3 mb-8">
          <div
            class="w-10 h-10 bg-blue-500/10 rounded-lg flex items-center justify-center"
          >
            <svg
              class="w-5 h-5 text-blue-500"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 11V7a4 4 0 018 0m-4 8v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z"
              ></path>
            </svg>
          </div>
          <h2 class="text-2xl font-semibold text-white">Decrypt</h2>
        </div>

        <form id="decryptForm" class="space-y-6">
          <div>
            <label class="block text-sm font-medium text-slate-300 mb-2"
              >Encrypted File</label
            >
            <input
              type="file"
              name="encrypted"
              id="encryptedInput"
              accept=".enc"
              required
              class="file-input w-full px-4 py-3 bg-slate-800 border border-slate-700 rounded-lg text-slate-300 hover:border-slate-600 transition cursor-pointer focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
            <span
              id="encryptedFileName"
              class="block mt-2 text-sm text-slate-500"
            ></span>
          </div>

          <div>
            <label class="block text-sm font-medium text-slate-300 mb-2"
              >Method</label
            >
            <div class="flex gap-3">
              <label class="flex-1 cursor-pointer">
                <input
                  type="radio"
                  name="method"
                  value="aes"
                  checked
                  class="peer sr-only"
                />
                <div
                  class="bg-slate-800 border border-slate-700 rounded-lg p-3 text-center peer-checked:bg-blue-500/10 peer-checked:border-blue-500 transition"
                >
                  <span class="text-slate-300 font-medium">AES-256</span>
                </div>
              </label>
              <label class="flex-1 cursor-pointer">
                <input
                  type="radio"
                  name="method"
                  value="chacha20"
                  class="peer sr-only"
                />
                <div
                  class="bg-slate-800 border border-slate-700 rounded-lg p-3 text-center peer-checked:bg-blue-500/10 peer-checked:border-blue-500 transition"
                >
                  <span class="text-slate-300 font-medium">ChaCha20</span>
                </div>
              </label>
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-slate-300 mb-2"
              >Password</label
            >
            <input
              type="password"
              name="key"
              id="decryptKey"
              required
              class="w-full px-4 py-3 bg-slate-800 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500 transition"
              placeholder="Enter password"
            />
          </div>

          <button
            type="submit"
            id="decryptBtn"
            class="w-full bg-blue-500 text-white font-medium py-3 rounded-lg hover:bg-blue-600 transition disabled:opacity-50 disabled:cursor-not-allowed"
          >
            Decrypt
          </button>
        </form>

        <div
          id="decryptLoading"
          class="hidden mt-4 bg-slate-800 border border-slate-700 rounded-lg p-4 flex items-center gap-3"
        >
          <svg
            class="spinner w-5 h-5 text-blue-500"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <circle
              class="opacity-25"
              cx="12"
              cy="12"
              r="10"
              stroke="currentColor"
              stroke-width="4"
            ></circle>
            <path
              class="opacity-75"
              fill="currentColor"
              d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
            ></path>
          </svg>
          <span class="text-slate-300 text-sm">Decrypting...</span>
        </div>
      </div>
    </div>

    <!-- Toast Notification -->
    <div
      id="toast"
      class="hidden fixed bottom-8 right-8 bg-slate-800 border border-slate-700 rounded-lg p-4 shadow-xl max-w-sm z-50"
    >
      <div class="flex items-start gap-3">
        <div id="toastIcon"></div>
        <div>
          <p id="toastTitle" class="text-white font-medium"></p>
          <p id="toastMessage" class="text-slate-400 text-sm mt-1"></p>
        </div>
      </div>
    </div>

    <script>
      // File name display
      document
        .getElementById("videoInput")
        .addEventListener("change", function (e) {
          const fileName = e.target.files[0]?.name || "";
          document.getElementById("videoFileName").textContent = fileName;
        });

      document
        .getElementById("encryptedInput")
        .addEventListener("change", function (e) {
          const fileName = e.target.files[0]?.name || "";
          document.getElementById("encryptedFileName").textContent = fileName;
        });

      // Toast notification
      function showToast(type, title, message) {
        const toast = document.getElementById("toast");
        const toastIcon = document.getElementById("toastIcon");
        const toastTitle = document.getElementById("toastTitle");
        const toastMessage = document.getElementById("toastMessage");

        if (type === "success") {
          toastIcon.innerHTML =
            '<svg class="w-5 h-5 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>';
        } else if (type === "error") {
          toastIcon.innerHTML =
            '<svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>';
        }

        toastTitle.textContent = title;
        toastMessage.textContent = message;
        toast.classList.remove("hidden");

        setTimeout(() => {
          toast.classList.add("hidden");
        }, 5000);
      }

      // Encrypt form
      document
        .getElementById("encryptForm")
        .addEventListener("submit", async function (e) {
          e.preventDefault();

          const formData = new FormData(this);
          const loading = document.getElementById("encryptLoading");
          const btn = document.getElementById("encryptBtn");

          loading.classList.remove("hidden");
          btn.disabled = true;

          try {
            const response = await fetch("/encrypt", {
              method: "POST",
              body: formData,
            });

            if (response.ok) {
              const blob = await response.blob();
              const url = window.URL.createObjectURL(blob);
              const a = document.createElement("a");
              a.href = url;
              a.download = "encrypted_video.enc";
              document.body.appendChild(a);
              a.click();
              window.URL.revokeObjectURL(url);
              document.body.removeChild(a);

              showToast(
                "success",
                "Encryption Success",
                "Video encrypted and downloaded successfully"
              );
              this.reset();
              document.getElementById("videoFileName").textContent = "";
            } else {
              const error = await response.json();
              showToast(
                "error",
                error.error || "Encryption Failed",
                error.detail || "An error occurred"
              );
            }
          } catch (error) {
            showToast("error", "Error", error.message);
          } finally {
            loading.classList.add("hidden");
            btn.disabled = false;
          }
        });

      // Decrypt form
      document
        .getElementById("decryptForm")
        .addEventListener("submit", async function (e) {
          e.preventDefault();

          const formData = new FormData(this);
          const loading = document.getElementById("decryptLoading");
          const btn = document.getElementById("decryptBtn");

          loading.classList.remove("hidden");
          btn.disabled = true;

          try {
            const response = await fetch("/decrypt", {
              method: "POST",
              body: formData,
            });

            if (response.ok) {
              const blob = await response.blob();
              const url = window.URL.createObjectURL(blob);
              const a = document.createElement("a");
              a.href = url;
              a.download = "decrypted_video.mp4";
              document.body.appendChild(a);
              a.click();
              window.URL.revokeObjectURL(url);
              document.body.removeChild(a);

              showToast(
                "success",
                "Decryption Success",
                "Video decrypted and downloaded successfully"
              );
              this.reset();
              document.getElementById("encryptedFileName").textContent = "";
            } else {
              const error = await response.json();
              showToast(
                "error",
                error.error || "Decryption Failed",
                error.detail || "An error occurred"
              );
            }
          } catch (error) {
            showToast("error", "Error", error.message);
          } finally {
            loading.classList.add("hidden");
            btn.disabled = false;
          }
        });
    </script>
  </body>
</html>
